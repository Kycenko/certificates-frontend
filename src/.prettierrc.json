{
	"trailingComma": "none",
	"tabWidth": 2,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"singleAttributePerLine": true,

	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@/shared/(.*)$",
		"^@/app/(.*)$",
		"^@/modules/(.*)$",
		"^@/routes/(.*)$",
		"^[../]+/(.*)$",
		"^[./](.*)$",
		"(.s?css)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,

	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	]
}
